@model MiniShopMVC.Models.Entities.Category

@{
    ViewData["Title"] = "Добавить категорию";
}

<h2 class="mb-4">Добавить категорию</h2>

<form asp-controller="Category" asp-action="Create"  method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Название категории</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"> Description </label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Отмена</a>
</form>