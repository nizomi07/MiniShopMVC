@{
    ViewData["Title"] = "Contact Us";
}

<style>
        /* Reset basic margin/padding */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Body and overall page setup */
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #00bcd4, #3f51b5);
            color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            overflow: hidden;
        }

        /* Centered container for all content */
        .contact-container {
            text-align: center;
            padding: 50px;
            border-radius: 20px;
            background: rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(10px);
            box-shadow: 0 0 50px rgba(0, 0, 0, 0.5);
            max-width: 800px;
            width: 100%;
            position: relative;
            animation: fadeIn 2s ease-in-out;
        }

        /* Main heading */
        .main-title {
            font-size: 50px;
            font-weight: 700;
            animation: slideUp 1s ease-out;
        }

        /* Subheading */
        .sub-heading {
            font-size: 20px;
            font-weight: 300;
            margin-top: 10px;
            animation: slideUp 1.5s ease-out;
        }

        /* Phone number section */
        .phone-number-section {
            margin: 30px 0;
        }

        .phone-text {
            font-size: 20px;
            font-weight: 500;
            opacity: 0.8;
        }

        .phone-number {
            font-size: 35px;
            font-weight: 700;
            color: #FF4081;
            animation: zoomIn 1.5s ease-in-out;
        }

        /* Contact form fields */
        .input-field,
        .textarea-field {
            width: 80%;
            padding: 15px;
            margin: 10px 0;
            font-size: 18px;
            border: 2px solid #fff;
            border-radius: 10px;
            outline: none;
            background: rgba(255, 255, 255, 0.2);
            color: #fff;
            transition: all 0.3s ease;
        }

        .input-field:focus,
        .textarea-field:focus {
            border-color: #FF4081;
            background-color: rgba(255, 255, 255, 0.3);
        }

        .textarea-field {
            height: 150px;
            resize: none;
        }

        /* Submit button */
        .submit-btn {
            padding: 15px 30px;
            background-color: #FF4081;
            color: #fff;
            border: none;
            border-radius: 50px;
            font-size: 18px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-top: 20px;
            box-shadow: 0 5px 15px rgba(255, 64, 129, 0.3);
        }

        .submit-btn:hover {
            background-color: #f50057;
            box-shadow: 0 10px 20px rgba(255, 64, 129, 0.5);
        }

        /* Animations */
        keyframes slideUp {
            from {
                transform: translateY(50px);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        keyframes zoomIn {
            from {
                transform: scale(0.5);
                opacity: 0;
            }
            to {
                transform: scale(1);
                opacity: 1;
            }
        }

        keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }


    </style>


<div class="contact-container">
    <div class="content">
        <h1 class="main-title">Get in Touch with Us!</h1>
        <p class="sub-heading">We would love to hear from you.</p>
        <div class="phone-number-section">
            <p class="phone-text">Call us at:</p>
            <h2 class="phone-number">+1234 5678 910</h2>
        </div>
        <div class="contact-form">
            <input type="text" placeholder="Your Name" class="input-field">
            <input type="email" placeholder="Your Email" class="input-field">
            <textarea placeholder="Your Message" class="textarea-field"></textarea>
            <button class="submit-btn">Send Message</button>
        </div>
    </div>
</div>